
@{
    Layout = null;
}


<!DOCTYPE html>
<html lang="fa" dir="rtl">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>صفحه اصلی</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <link rel="stylesheet" href="~/styles/resetPassword/style.css">
</head>

<body>


    <div class="navSty">
        <header id="section1" class="parallax-slider">
            <img src="~/styles/resetPassword/banner.jpg" style="width: 100%; max-width: 100%; height: auto;" alt="">
        </header>
    </div>

    <div class="mainContent">
        <div class="row">
            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                <div class="mainPage">
                    <div class="panel panel-default1">
                        <div class="panel-headingGreen">
                            <h4 class="panel-title">درخواست بازیابی گذرواژه </h4>
                        </div>
                        <h4>لطفا اطلاعات حساب کاربری خود را به صورت کامل وارد کنید</h4>
                        <div class="form-container">
                            <form action="">
                                <label for="stu_code">شماره دانشجویی</label>
                                <input type="text" name="stu_code" id="stu_code" placeholder="شماره دانشجویی خود را وارد کنید">
                        
                                <label for="phone_nu">شماره تلفن</label>
                                <input type="text" id="phone_nu" placeholder="شماره تلفن خود را وارد کنید">
                        
                                <input type="submit" value="ارسال">
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="features-container">
        <div>
            <div id="localDate"></div>
        </div>
        <div>
            <div id="digitalClock"></div>
        </div>
    </div>

    <footer class="text-center" style="margin-top: 20px; padding: 10px; background-color: #eee;">
        <p>&copy; تمامی حقوق محفوظ است.</p>
    </footer>

    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>

    <script>
        function updateClock() {
            const now = new Date();
            let hours = now.getHours();
            let minutes = now.getMinutes();
            let seconds = now.getSeconds();

            hours = hours < 10 ? '0' + hours : hours;
            minutes = minutes < 10 ? '0' + minutes : minutes;
            seconds = seconds < 10 ? '0' + seconds : seconds;

            const timeString = `${hours}:${minutes}:${seconds}`;
            document.getElementById('digitalClock').textContent = timeString;

            const options = { year: 'numeric', month: 'numeric', day: 'numeric' };
            document.getElementById('localDate').textContent = now.toLocaleDateString('fa-IR', options);
        }

        setInterval(updateClock, 1000);
        updateClock(); // برای نمایش اولیه ساعت

        $(document).ready(function () {
            $('.navbar-toggle').click(function () {
                $('.navbar-collapse').toggleClass('in');
            });
        });
    </script>
</body>

</html>