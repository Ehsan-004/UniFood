        height: auto;
    }

    .navSty {
        background-color: white;
        box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
        /* سایه به نوار بالا */
    }

    .TopStrip {
        background-color: #4CAF50;
        height: 5px;
    }

    .navbar-custom {
        border: none;
        margin-bottom: 0;
    }

    .navbar-nav>li>a {
        padding-top: 15px;
        padding-bottom: 15px;
        font-family: 'IRANSans(FaNum) Medium';
    }

    .navbar-toggle {
        margin-top: 25px;
        margin-bottom: 25px;
        border: none;
        background-color: transparent;
    }

    .navbar-toggle .icon-bar {
        background-color: #333;
        /* رنگ خطوط منو */
    }

    .nav-expand {
        display: flex;
        justify-content: space-between;
        /* برای تراز کردن دو طرف */
        align-items: center;
        /* تراز کردن عمودی */
        padding: 10px 15px;
        /* کمی padding برای زیبایی */
    }

    .nav-expand img {
        height: 50px;
        width: 50px;
        border-radius: 50%;
        margin-left: 10px;
    }

    .mainPage {
        padding: 10px 10px 0 10px;
    }

    .panel-default1 {
        border: none;
        box-shadow: 2px 2px 5px rgba(0, 0, 0, 0.1);
    }

    .features-container {
        display: flex;
        justify-content: space-around;
        margin-top: 20px;
        flex-wrap: wrap;
        /* برای نمایش در یک خط در موبایل */
    }

    /* استایل‌های بخش لینک‌های صفحه اصلی */
    .homeLinkCont {
        display: flex;
        flex-wrap: wrap;
        justify-content: space-around;
        margin-top: 20px;
    }

    .homeLinkdiv {
        margin-bottom: 10px;
        text-align: center;
        width: calc(50% - 10px);
        /* برای دو ستون در دسکتاپ */
        box-sizing: border-box;
        /* برای محاسبه درست عرض با padding */
        padding: 5px;
    }

    .homeLink {
        display: block;
        padding: 10px 20px;
        background-color: #4CAF50;
        color: white;
        text-decoration: none;
        border-radius: 5px;
        width: 100%;
        box-sizing: border-box;
        transition: background-color 0.3s ease;
        /* انیمیشن برای hover */
    }

    .homeLink:hover {
        background-color: #45a049;
        /* رنگ hover */
    }


    /* tableeeeeeeeee */
    /* واکنش‌گرا کردن */
    .menu {
        border: 1px solid #ddd;
        border-radius: 5px;
        padding: 10px;
        width:100%;
        box-sizing: border-box;
        /* max-width: 1200px; افزایش حداکثر عرض برای دسکتاپ */
        margin: 20px auto;
    }

    .restaurant-info {
        text-align: center;
        margin-bottom: 20px;
    }

    /* استایل‌های جدول برای حالت دسکتاپ */
    .desktop-table {
        width: 100%;
        border-collapse: collapse;
    }

    .desktop-table th,
    .desktop-table td {
        border: 1px solid #ddd;
        padding: 8px;
        text-align: center;
        white-space: nowrap;
        /* جلوگیری از شکستن خط در سلول‌ها */
    }

    .desktop-table th {
        background-color: #607D8B;
        color: #eee;
        font-weight: bold;
    }

    /* مخفی کردن منوی موبایل در حالت دسکتاپ */
    .mobile-menu {
        display: none;
    }

    /* Media Query برای حالت موبایل */
   
</style>
