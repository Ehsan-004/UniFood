    <script>
    document.addEventListener('DOMContentLoaded', function () {
        const desktopTable = document.querySelector('.desktop-table tbody');
        const mobileMenu = document.querySelector('.mobile-menu');

        if (desktopTable && mobileMenu) {
            const rows = desktopTable.querySelectorAll('tr');

            rows.forEach(row => {
                const cells = row.querySelectorAll('td');
                const dayCells = document.querySelectorAll(".desktop-table thead tr th");
                for (let i = 0; i < dayCells.length - 1; i++) {
                    const mobileMenuItem = document.createElement('div');
                    mobileMenuItem.classList.add("mobile-menu-item");
                    const day = document.createElement('div');
                    day.classList.add("day");
                    day.textContent = dayCells[i].textContent;
                    const foodList = document.createElement("ul");
                    foodList.classList.add("food-list");
                    const food = document.createElement("li");
                    food.textContent = cells[i].textContent;
                    const meal = document.createElement("div");
                    meal.classList.add("meal");
                    meal.textContent = cells[dayCells.length - 1].textContent;
                    foodList.appendChild(food);
                    mobileMenuItem.appendChild(day);
                    mobileMenuItem.appendChild(foodList);
                    mobileMenuItem.appendChild(meal);
                    mobileMenu.appendChild(mobileMenuItem);
                }
            });
        }
    });
</script>
