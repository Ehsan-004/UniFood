@{
    ViewData["Title"] = "Home Page";
}

@section profiile
{
    <img src="~/user_.jpg" alt="عکس پروفایل" class="logoSty">
    <div style="display: flex; flex-direction: column; margin-right: 10px;">
        <span>احسان خلوصی</span>
        <div>
            <span>اعتبار رزرو: </span>
            <span id="headerCredit">0</span>
            <span> ریال</span>
        </div>
        <span>@DateTime.Today.Date</span>
    </div>
}

<div class="mainContent">
    <div class="row">
        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
            <div class="mainPage">
                <div class="panel panel-default1">
                    <div class="panel-headingGreen">
                        <h4 class="panel-title">اطلاعیه <i class="fa fa-info fa-WhiteColor"
                                                           style="padding-right: 10px;"></i></h4>
                    </div>
                    <div class="panel-body">
                        <div class="uiAnnouncement">
                            <div id="divAnnouncement">
                                <div style="overflow:auto;">
                                    <div class="form-inline">
                                        <i class="fa fa-bookmark padding-left10 greyColor"></i>
                                        <label class="TitleTXT">حذف یا رزرو شام روز شنبه ۲۲ دی
                                            ماه</label><br>
                                        <p>دانشجویان محترم تا ساعت ۱۳:۳۰ روز شنبه ۲۲ دی ماه فرصت دارند تا
                                            وعده شام آن روز را رزرو یا حذف نمایند.</p>
                                    </div>
                                    <div class="form-inline" style="margin-top: 10px;">
                                        <i class="fa fa-bookmark padding-left10 greyColor"></i>
                                        <label class="TitleTXT">فعال بودن تمامی سلف‌های دانشگاه در روز شنبه
                                            ۲۲ دی</label><br>
                                        <p>به اطلاع کلیه دانشجویان گرامی می‌رساند تمامی سلف‌های دانشگاه،
                                            فردا، شنبه ۲۲ دی، آماده خدمت‌رسانی به دانشجویانی که غذا رزرو
                                            کرده‌اند می‌باشند.</p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
            <div class="mainPage">
                <div class="panel panel-default1 homeLinkCont">
                    <div class="homeLinkdiv col-xs-10 col-sm-10 col-lg-5 col-md-5">
                        <a class="homeLink" asp-controller="Reserve" >رزرو</a>
                    </div>
                    <div class="homeLinkdiv col-xs-10 col-sm-10 col-lg-5 col-md-5">
                        <a class="homeLink" href="/UserHome/ShowTransactions">تراکنش ها</a>
                    </div>
                    <div class="homeLinkdiv col-xs-10 col-sm-10 col-lg-5 col-md-5">
                        <a class="homeLink" href="/Eshop/IncreaseCredit">افزایش اعتبار</a>
                    </div>
                    <div class="homeLinkdiv col-xs-10 col-sm-10 col-lg-5 col-md-5">
                        <a class="homeLink" href="/Eshop/TransferCredit">انتقال اعتبار</a>
                    </div>
                    <div class="homeLinkdiv col-xs-10 col-sm-10 col-lg-5 col-md-5">
                        <a class="homeLink" href="/ChangePasswords">تغییر رمز</a>
                    </div>
                    <div class="homeLinkdiv col-xs-10 col-sm-10 col-lg-5 col-md-5">
                        <a class="homeLink" href="/ChangePasswords/ManageCard">مدیریت کارت</a>
                    </div>
                    <div class="homeLinkdiv col-xs-10 col-sm-10 col-lg-5 col-md-5">
                        <a class="homeLink" href="/IdGenerator">فراموشی کارت</a>
                    </div>
                    <div class="homeLinkdiv col-xs-10 col-sm-10 col-lg-5 col-md-5">
                        <a class="homeLink" href="/UserHome/Links">راهنما</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>