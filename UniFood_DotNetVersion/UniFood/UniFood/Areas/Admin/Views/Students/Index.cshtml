@model IEnumerable<UniFood.Models.Student>

@{
    ViewBag.Title = "Foods";
}


<div class="content-wrap">
    <div class="main">
        <div class="album py-5 bg-light">   
            <div class="container-fluid">
                <!-- rows -->
                <div class="table-wrapper">
                    <table id="resizable-table" class="responsive-table resizable">
                        <thead>
                        <tr>
                            @* <th>Id</th> *@
                            <th>نام و نام خانوادگی</th>
                            <th>شماره دانشجویی</th>
                            <th>مقطع تحصیلی</th>
                            <th>اعتبار</th>
                            <th><a class="btn btn-secondary" asp-area="Admin" asp-controller="Students" asp-action="Create">افزودن</a></th>
                            @* <th><a href="Categories/Create/">Create</a></th> *@
                        </tr>
                        </thead>
                        <tbody>
                        @if (Model.Any())
                        {
                            @foreach (var item in Model)
                            {
                                <tr>
                                    @* <td>@item.Id</td> *@
                                    <td>@item.FirstName @item.LastName</td>
                                    <td>@item.UniStudentId</td>
                                    <td>@item.EducationLevel</td>
                                    <td>@item.Credit</td>
                                    <td>
                                        @* <a class="btn btn-view">See</a> *@
                                        <a asp-area="Admin"
                                           asp-controller="Students"
                                           asp-action="Edit"
                                           class="btn btn-primary btn-edit"
                                           asp-route-username="@item.UserName">Edit</a>

                                        <a asp-area="Admin"
                                           asp-controller="Students"
                                           asp-action="Delete"
                                           asp-route-username="@item.UserName"
                                           class="btn btn-danger btn-delete">Delete</a>
                                    </td>
                                </tr>
                            }
                        }
                        </tbody>
                    </table>
                </div>

            </div>
        </div>
    </div>
</div>