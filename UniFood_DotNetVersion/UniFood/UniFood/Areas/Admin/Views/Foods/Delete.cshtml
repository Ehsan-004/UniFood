@using Microsoft.AspNetCore.Mvc.TagHelpers
@using UniFood.Data.Enum
@model UniFood.Models.Food


<div class="content-wrap">
    <div class="main">
        <div class="container-fluid">
            <!-- /# row -->
            <div class="row">
                <div class="col-lg-12">
                    <div class="card">
                        <div class="card-body">
                            <div class="basic-elements">
                                <form>
                                    <div class="row">
                                        <div class="col-lg-12">
                                            <div class="form-group">
                                                <label>نام غذا</label>
                                                <br>
                                                <input asp-for="Name" class="form-control" placeholder="Name" value="@Model.Name" readonly>
                                            </div>
                                            <br>
                                            <div class="form-group">
                                                <label>قیمت غذا</label>
                                                <br>
                                                <input asp-for="Price" class="form-control" placeholder="Name" value="@Model.Price" readonly>
                                            </div>
                                            <br>
                                            <div class="form-group">
                                                <label asp-for="Day"></label>
                                                <br>
                                                <select 
                                                    disabled
                                                    asp-for="Day"
                                                    class="form-control"
                                                    asp-items="@Html.GetEnumSelectList<Day>()"></select>
                                                <span asp-validation-for="Day"></span>
                                            </div>
                                            <br>
                                            <div class="form-group">
                                                <label asp-for="IsActive"></label>
                                                <br>
                                                <input type="checkbox" asp-for="IsActive" checked>
                                                <span asp-validation-for="Day"></span>
                                            </div>
                                        </div>
                                    </div>
                                </form>
                                    
                                <form method="post" asp-area="Admin" asp-controller="Foods" asp-action="Delete">
                                    <input type="hidden" name="id" value="@Model.Id" id="id">
                                    <button type="submit" class="btn btn-danger btn-default">Delete</button>
                                </form>
                                    
                            </div>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>
</div>