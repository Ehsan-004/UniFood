@using UniFood.Data.Enum
@model UniFood.Models.Food


<div class="content-wrap">
    <div class="main">
        <div class="container-fluid">
            <!-- /# row -->
            <div class="row">
                <div class="col-lg-12">
                    <div class="card">
                        <div class="card-body">
                            <div class="basic-elements">
                                <form method="post" asp-area="Admin" asp-controller="Foods" asp-action="Create">
                                    <div class="row">
                                        <div class="col-lg-12">
                                            <div class="form-group">
                                                <label asp-for="Name"></label>
                                                <br>
                                                <input asp-for="Name" class="form-control" placeholder="Name">
                                                <span asp-validation-for="Name"></span>
                                            </div>
                                            <br>
                                            <div class="form-group">
                                                <label asp-for="Price"></label>
                                                <br>
                                                <input asp-for="Price" class="form-control" placeholder="Name">
                                                <span asp-validation-for="Price"></span>
                                            </div>
                                            <br>
                                            <div class="form-group">
                                                <label asp-for="Day"></label>
                                                <br>
                                                <select
                                                    asp-for="Day"
                                                    class="form-control"
                                                    asp-items="@Html.GetEnumSelectList<Day>()"></select>
                                                <span asp-validation-for="Day"></span>
                                            </div>
                                            <br>
                                            <div class="form-group">
                                                <label asp-for="IsActive"></label>
                                                <br>
                                                <input type="checkbox" asp-for="IsActive" checked>
                                                <span asp-validation-for="Day"></span>
                                            </div>
                                            
                                        </div>
                                    </div>
                                    <button type="submit" class="btn btn-primary btn-default">Create</button>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>
</div>