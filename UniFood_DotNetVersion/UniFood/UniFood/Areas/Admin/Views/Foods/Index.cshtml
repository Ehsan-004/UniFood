@model IEnumerable<UniFood.Models.Food>

@{
    ViewBag.Title = "Foods";
}


<div class="content-wrap">
    <div class="main">
        <div class="album py-5 bg-light">
            <div class="container-fluid">
                <!-- rows -->
                <div class="table-wrapper">
                    <table id="resizable-table" class="responsive-table resizable">
                        <thead>
                        <tr>
                            @* <th>Id</th> *@
                            <th>نام غذا</th>
                            <th>قیمت غذا</th>
                            <th><a class="btn btn-secondary" asp-area="Admin" asp-controller="Foods" asp-action="Create">افزودن</a></th>
                            @* <th><a href="Categories/Create/">Create</a></th> *@
                        </tr>
                        </thead>
                        <tbody>
                        @if (Model.Any())
                        {
                        @foreach (var item in Model)
                        {
                        <tr>
                            @* <td>@item.Id</td> *@
                            <td>@item.Name</td>
                            <td>@item.Price</td>
                            <td>
                                @* <a class="btn btn-view">See</a> *@
                                <a asp-area="Admin"
                                   asp-controller="Foods"
                                   asp-action="Edit"
                                   class="btn btn-primary btn-edit"
                                   asp-route-id="@item.Id">Edit</a>

                                <a asp-area="Admin"
                                   asp-controller="Foods"
                                   asp-action="Delete"
                                   asp-route-id="@item.Id"
                                   class="btn btn-danger btn-delete">Delete</a>
                            </td>
                        </tr>
                        }
                        }
                        </tbody>
                    </table>
                </div>

            </div>
        </div>
    </div>
</div>
